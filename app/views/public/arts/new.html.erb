<h1>投稿フォーム</h1>

<% if @art.errors.any? %>
    画像を投稿してください
    <ul>
        <% @art.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @art, url: public_arts_path do |f| %>
    <h4>画像</h4>
    <%= f.file_field :image, accept: "image/*" %>

    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>本文</h4>
    <%= f.text_field :body %>

    <%= f.submit '投稿' %>
<% end %>